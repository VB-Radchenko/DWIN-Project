#ifndef __DWIN_APP_H
#define __DWIN_APP_H

//==============================================================================
//---------------------------------Includes-------------------------------------
//==============================================================================
#ifdef STM32L476xx
#include "stm32l4xx_hal.h"
#endif
//==============================================================================
//---------------------------------Defines--------------------------------------
//==============================================================================
#define DWIN_UART huart4
#define TEST_PRINTF_DWIN
#define TEST_PRINTF_DWIN_HEX
#define TEST_PRINTF_DWIN_PARSING
#define TEST_PRINTF_DWIN_TX

//==============================================================================
//--------------------------------Variables-------------------------------------
//==============================================================================
enum workStateVacuM_E
{
  stop,
  play,
  pause
  
};

struct workStateVacuM_P
{
  uint8_t power;
  uint16_t minutes;
  uint8_t seconds;
  enum workStateVacuM_E state;
};

struct saveToFlashData_P
{
  uint8_t blockedForNonPayment;
  uint8_t ledBrightnessWork;
  uint8_t ledBrightnessSleep;
  uint16_t timeOfWorkMinutes;
  uint16_t timeWorksBrushes;
  uint32_t timeAllWork;
  uint8_t powerOfWork;
  uint8_t passwordAttempts;
  uint8_t monthPay;
  uint32_t serialNumber;
};
//==============================================================================
//--------------------------------PROTOTYPE-------------------------------------
//==============================================================================


//==============================================================================
//--------------------------------FUNCTIONS-------------------------------------
//==============================================================================
void processDWIN();
void dataPresetSynchrodata();
void FirstreadFlashData();
